    "rules": {
      "gt0060": {
        "id": "gt0060",
        "priority": 20,
        "when": [
          "$gt0052|Telephone points|==null",
          "$gt0053|Shopping points|==null",
          "$gt0054|Food preparation points|==null",
          "$gt0055|House keeping points|==null",
          "$gt0056|Laundry points|==null",
          "$gt0057|Transportation points|==null",
          "$gt0059|Finances points|==null",
          "$gt0058|Medications points|==null"
        ],
        "then": [
          "$gt0052|Telephone points|=0|local::at0014|0|",
          "$gt0053|Shopping points|=0|local::at0017|0|",
          "$gt0054|Food preparation points|=0|local::at0020|0|",
          "$gt0055|House keeping points|=0|local::at0023|0|",
          "$gt0056|Laundry points|=0|local::at0026|0|",
          "$gt0057|Transportation points|=0|local::at0029|0|",
          "$gt0058|Medications points|=0|local::at0033|0|",
          "$gt0059|Finances points|=0|local::at0035|0|"
        ]
      },
      "gt0022": {
        "id": "gt0022",
        "priority": 19,
        "when": [
          "$gt0003|Ability to Use Telephone|==4|local::at0022|0- Does not use telephone at all|"
        ],
        "then": [
          "$gt0052|Telephone points|=0|local::at0014|0|"
        ]
      },
      "gt0007": {
        "id": "gt0007",
        "priority": 18,
        "when": [
          "($gt0003|Ability to Use Telephone|==1|local::at0016|1- Operates telephone on own initiative; looks up and dials numbers|)||(($gt0003|Ability to Use Telephone|==2|local::at0020|1- Dials a few well-known numbers|)||($gt0003|Ability to Use Telephone|==3|local::at0021|1- Answers telephone, but does not dial|))"
        ],
        "then": [
          "$gt0052|Telephone points|=1|local::at0015|1|"
        ]
      },
      "gt0029": {
        "id": "gt0029",
        "priority": 17,
        "when": [
          "($gt0014|Shopping|==2|local::at0025|0- Shops independently for small purchases|)||(($gt0014|Shopping|==3|local::at0026|0- Needs to be accompanied on any shopping trip|)||($gt0014|Shopping|==4|local::at0027|0- Completely unable to shop|))"
        ],
        "then": [
          "$gt0053|Shopping points|=0|local::at0017|0|"
        ]
      },
      "gt0030": {
        "id": "gt0030",
        "priority": 16,
        "when": [
          "$gt0014|Shopping|==1|local::at0024|1- Takes care of all shopping needs independently|"
        ],
        "then": [
          "$gt0053|Shopping points|=1|local::at0018|1|"
        ]
      },
      "gt0031": {
        "id": "gt0031",
        "priority": 15,
        "when": [
          "($gt0015|Food Preparation|==2|local::at0030|0- Prepares adequate meals if supplied with ingredients|)||(($gt0015|Food Preparation|==3|local::at0031|0- Heats and serves prepared meals or prepares meals but does not maintain adequate diet|)||($gt0015|Food Preparation|==4|local::at0032|0- Needs to have meals prepared and served|))"
        ],
        "then": [
          "$gt0054|Food preparation points|=0|local::at0020|0|"
        ]
      },
      "gt0032": {
        "id": "gt0032",
        "priority": 14,
        "when": [
          "$gt0015|Food Preparation|==1|local::at0029|1- Plans, prepares, and serves adequate meals independently|"
        ],
        "then": [
          "$gt0054|Food preparation points|=1|local::at0021|1|"
        ]
      },
      "gt0033": {
        "id": "gt0033",
        "priority": 13,
        "when": [
          "$gt0016|Housekeeping|==5|local::at0038|0- Does not participate in any housekeeping tasks|"
        ],
        "then": [
          "$gt0055|House keeping points|=0|local::at0023|0|"
        ]
      },
      "gt0034": {
        "id": "gt0034",
        "priority": 12,
        "when": [
          "(($gt0016|Housekeeping|==1|local::at0034|1- Maintains house alone with occasional assistance (e.g. heavy work domestic help)|)||($gt0016|Housekeeping|==2|local::at0035|1- Performs light daily tasks such as dishwashing, bed making|))||(($gt0016|Housekeeping|==3|local::at0036|1- Performs light daily tasks, but cannot maintain acceptable level of cleanliness|)||($gt0016|Housekeeping|==4|local::at0037|1- Needs help with all home maintenance tasks|))"
        ],
        "then": [
          "$gt0055|House keeping points|=1|local::at0024|1|"
        ]
      },
      "gt0035": {
        "id": "gt0035",
        "priority": 11,
        "when": [
          "$gt0017|Laundry|==3|local::at0042|0- All laundry must be done by others|"
        ],
        "then": [
          "$gt0056|Laundry points|=0|local::at0026|0|"
        ]
      },
      "gt0036": {
        "id": "gt0036",
        "priority": 10,
        "when": [
          "($gt0017|Laundry|==1|local::at0040|1- Does personal laundry completely|)||($gt0017|Laundry|==2|local::at0041|1- Launders small items-rinses stockings, etc.|)"
        ],
        "then": [
          "$gt0056|Laundry points|=1|local::at0027|1|"
        ]
      },
      "gt0040": {
        "id": "gt0040",
        "priority": 7,
        "when": [
          "$gt0018|Mode of Transportation|==5|local::at0048|0- Does not travel at all|"
        ],
        "then": [
          "$gt0057|Transportation points|=0|local::at0029|0|"
        ]
      },
      "gt0041": {
        "id": "gt0041",
        "priority": 6,
        "when": [
          "($gt0018|Mode of Transportation|==1|local::at0044|1- Travels independently on public transportation or drives own car|)||(($gt0018|Mode of Transportation|==2|local::at0045|1- Arranges own travel via taxi, but does not otherwise use public transportation|)||($gt0018|Mode of Transportation|==3|local::at0046|1- Travels on public transportation when accompanied by another|))"
        ],
        "then": [
          "$gt0057|Transportation points|=1|local::at0030|1|"
        ]
      },
      "gt0045": {
        "id": "gt0045",
        "priority": 5,
        "when": [
          "$gt0019|Responsibility for Own Medications|==1|local::at0050|1- Is reponsible for taking medication in correct dosages at correct time|"
        ],
        "then": [
          "$gt0058|Medications points|=1|local::at0034|1|"
        ]
      },
      "gt0044": {
        "id": "gt0044",
        "priority": 4,
        "when": [
          "($gt0019|Responsibility for Own Medications|==2|local::at0051|0- Takes responsibility if medication is prepared in advance in separate dosage|)||($gt0019|Responsibility for Own Medications|==3|local::at0052|0- Is not capable of dispensing own medication|)"
        ],
        "then": [
          "$gt0058|Medications points|=0|local::at0033|0|"
        ]
      },
      "gt0047": {
        "id": "gt0047",
        "priority": 3,
        "when": [
          "$gt0020|Ability to Handle Finances|==3|local::at0056|0- Incapable of handling money|"
        ],
        "then": [
          "$gt0059|Finances points|=0|local::at0035|0|"
        ]
      },
      "gt0048": {
        "id": "gt0048",
        "priority": 2,
        "when": [
          "($gt0020|Ability to Handle Finances|==1|local::at0054|1- Manages financial matters independently (budgets, writes checks, pays rent, bills, goes to bank), collects and keeps track of income|)||($gt0020|Ability to Handle Finances|==2|local::at0055|1- Manages day-to-day purchases, but needs help with banking, major purchases, etc.|)"
        ],
        "then": [
          "$gt0059|Finances points|=1|local::at0036|1|"
        ]
      },
      "gt0043": {
        "id": "gt0043",
        "priority": 1,
        "then": [
          "$gt0006|Total score|.magnitude=$gt0052.value+$gt0053.value+$gt0054.value+$gt0055.value+$gt0056.value+$gt0057.value+$gt0058.value+$gt0059.value"
        ]
      }
    }
  },
