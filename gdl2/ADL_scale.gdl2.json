    "rules": {
      "gt0021": {
        "id": "gt0021",
        "priority": 8,
        "when": [
          "$gt0019|Feeding points|==null",
          "$gt0018|Continence points|==null",
          "$gt0017|Transferring points|==null",
          "$gt0016|Toileting points|==null",
          "$gt0015|Dressing points|==null",
          "$gt0014|Bathing points|==null"
        ],
        "then": [
          "$gt0019|Feeding points|=0",
          "$gt0018|Continence points|=0",
          "$gt0017|Transferring points|=0",
          "$gt0016|Toileting points|=0",
          "$gt0015|Dressing points|=0",
          "$gt0014|Bathing points|=0"
        ]
      },
      "gt0012": {
        "id": "gt0012",
        "priority": 7,
        "when": [
          "$gt0033|Bathing|==1|local::at0009|Bathes self completely or needs help in bathing only a single part of the body such as the back, genital area or disabled extremity. |"
        ],
        "then": [
          "$gt0014|Bathing points|=1"
        ]
      },
      "gt0023": {
        "id": "gt0023",
        "priority": 6,
        "when": [
          "$gt0034|Dressing|==1|local::at0012|Gets clothes from closets and drawers and puts on clothes and outer garments complete with fasteners. May have help tying shoes.|"
        ],
        "then": [
          "$gt0015|Dressing points|=1"
        ]
      },
      "gt0024": {
        "id": "gt0024",
        "priority": 5,
        "when": [
          "$gt0035|Toileting|==1|local::at0015|Goes to toilet, gets on and off, arranges clothes, cleans genital area without help.|"
        ],
        "then": [
          "$gt0016|Toileting points|=1"
        ]
      },
      "gt0027": {
        "id": "gt0027",
        "priority": 4,
        "when": [
          "$gt0038|Feeding|==1|local::at0006|Gets food from plate into mouth without help. Preparation of food may be done by another person.|"
        ],
        "then": [
          "$gt0019|Feeding points|=1"
        ]
      },
      "gt0025": {
        "id": "gt0025",
        "priority": 3,
        "when": [
          "$gt0036|Transferring|==1|local::at0018|Moves in and out of bed or chair unassisted. Mechanical transferring aides are acceptable.|"
        ],
        "then": [
          "$gt0017|Transferring points|=1"
        ]
      },
      "gt0026": {
        "id": "gt0026",
        "priority": 2,
        "when": [
          "$gt0037|Continence|==1|local::at0021|Exercises complete self control over urination and defecation. |"
        ],
        "then": [
          "$gt0018|Continence points|=1"
        ]
      },
      "gt0030": {
        "id": "gt0030",
        "priority": 1,
        "when": [
          "$gt0033|Bathing|!=null",
          "$gt0034|Dressing|!=null",
          "$gt0035|Toileting|!=null",
          "$gt0036|Transferring|!=null",
          "$gt0037|Continence|!=null",
          "$gt0038|Feeding|!=null"
        ],
        "then": [
          "$gt0020|Total ADL score|.magnitude=$gt0014+$gt0015+$gt0016+$gt0017+$gt0018+$gt0019"
        ]
      }
    }
  },
  "ontology": {
    "term_definitions": {
      "en": {
        "id": "en",
        "terms": {
          "gt0001": {
            "id": "gt0001",
            "text": "ADL_scale",
            "description": "The Katz Activity of Daily Living (ADL) scale assesses the level of independency in elderly, based on six items (bathing, dressing, toileting, transferring, continence and feeding). The score for each item ranges from 0 (unable to perform the activity) to 1 (able to perform the activity). The total ADL score ranges from 0 (completely dependent) to 6 (completely independent)."
          },
