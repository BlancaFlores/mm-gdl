    "rules": {
      "gt0022": {
        "id": "gt0022",
        "priority": 19,
        "when": [
          "$gt0003|Ability to Use Telephone|==4|local::at0022|Does not use telephone at all (0)|"
        ],
        "then": [
          "$gt0010|Ability to use telephone|=0"
        ]
      },
      "gt0007": {
        "id": "gt0007",
        "priority": 18,
        "when": [
          "($gt0003|Ability to Use Telephone|==1|local::at0016|Operates telephone on own initiative; looks up and dials numbers (1)|)||(($gt0003|Ability to Use Telephone|==2|local::at0020|Dials a few well-known numbers (1)|)||($gt0003|Ability to Use Telephone|==3|local::at0021|Answers telephone, but does not dial (1)|))"
        ],
        "then": [
          "$gt0010|Ability to use telephone|=1"
        ]
      },
      "gt0029": {
        "id": "gt0029",
        "priority": 17,
        "when": [
          "($gt0014|Shopping|==2|local::at0025|Shops independently for small purchases (0)|)||(($gt0014|Shopping|==3|local::at0026|Needs to be accompanied on any shopping trip (0)|)||($gt0014|Shopping|==4|local::at0027|Completely unable to shop (0)|))"
        ],
        "then": [
          "$gt0013|Shopping|=0"
        ]
      },
      "gt0030": {
        "id": "gt0030",
        "priority": 16,
        "when": [
          "$gt0014|Shopping|==1|local::at0024|Takes care of all shopping needs independently (1)|"
        ],
        "then": [
          "$gt0013|Shopping|=1"
        ]
      },
      "gt0031": {
        "id": "gt0031",
        "priority": 15,
        "when": [
          "($gt0015|Food Preparation|==2|local::at0030|Prepares adequate meals if supplied with ingredients (0)|)||(($gt0015|Food Preparation|==3|local::at0031|Heats and serves prepared meals or prepares meals but does not maintain adequate diet (0)|)||($gt0015|Food Preparation|==4|local::at0032|Needs to have meals prepared and served (0)|))"
        ],
        "then": [
          "$gt0023|Food preparation|=0"
        ]
      },
      "gt0032": {
        "id": "gt0032",
        "priority": 14,
        "when": [
          "$gt0015|Food Preparation|==1|local::at0029|Plans, prepares, and serves adequate meals independently (1)|"
        ],
        "then": [
          "$gt0023|Food preparation|=1"
        ]
      },
      "gt0033": {
        "id": "gt0033",
        "priority": 13,
        "when": [
          "$gt0016|Housekeeping|==5|local::at0038|Does not participate in any housekeeping tasks (0)|"
        ],
        "then": [
          "$gt0024|House keeping|=0"
        ]
      },
      "gt0034": {
        "id": "gt0034",
        "priority": 12,
        "when": [
          "(($gt0016|Housekeeping|==1|local::at0034|Maintains house alone with occasional assistance (e.g. heavy work domestic help) (1)|)||($gt0016|Housekeeping|==2|local::at0035|Performs light daily tasks such as dishwashing, bed making (1)|))||(($gt0016|Housekeeping|==3|local::at0036|Performs light daily tasks, but cannot maintain acceptable level of cleanliness (1)|)||($gt0016|Housekeeping|==4|local::at0037|Needs help with all home maintenance tasks (1)|))"
        ],
        "then": [
          "$gt0024|House keeping|=1"
        ]
      },
      "gt0035": {
        "id": "gt0035",
        "priority": 11,
        "when": [
          "$gt0017|Laundry|==3|local::at0042|All laundry must be done by others (0)|"
        ],
        "then": [
          "$gt0025|Laundry|=0"
        ]
      },
      "gt0036": {
        "id": "gt0036",
        "priority": 10,
        "when": [
          "($gt0017|Laundry|==1|local::at0040|Does personal laundry completely (1)|)||($gt0017|Laundry|==2|local::at0041|Launders small items-rinses stockings, etc. (1)|)"
        ],
        "then": [
          "$gt0025|Laundry|=1"
        ]
      },
      "gt0040": {
        "id": "gt0040",
        "priority": 7,
        "when": [
          "$gt0018|Mode of Transportation|==5|local::at0048|Does not travel at all (0)|"
        ],
        "then": [
          "$gt0026|Mode of Transportation|=0"
        ]
      },
      "gt0041": {
        "id": "gt0041",
        "priority": 6,
        "when": [
          "($gt0018|Mode of Transportation|==1|local::at0044|Travels independently on public transportation or drives own car (1)|)||(($gt0018|Mode of Transportation|==2|local::at0045|Arranges own travel via taxi, but does not otherwise use public transportation (1)|)||($gt0018|Mode of Transportation|==3|local::at0046|Travels on public transportation when accompanied by another (1)|))"
        ],
        "then": [
          "$gt0026|Mode of Transportation|=1"
        ]
      },
      "gt0045": {
        "id": "gt0045",
        "priority": 5,
        "when": [
          "$gt0019|Responsibility for Own Medications|==1|local::at0050|Is reponsible for taking medication in correct dosages at correct time (1)|"
        ],
        "then": [
          "$gt0027|Responsibility for Own Medications|=1"
        ]
      },
      "gt0044": {
        "id": "gt0044",
        "priority": 4,
        "when": [
          "($gt0019|Responsibility for Own Medications|==2|local::at0051|Takes responsibility if medication is prepared in advance in separate dosage (0)|)||($gt0019|Responsibility for Own Medications|==3|local::at0052|Is not capable of dispensing own medication (0)|)"
        ],
        "then": [
          "$gt0027|Responsibility for Own Medications|=0"
        ]
      },
      "gt0047": {
        "id": "gt0047",
        "priority": 3,
        "when": [
          "$gt0020|Ability to Handle Finances|==3|local::at0056|Incapable of handling money (0)|"
        ],
        "then": [
          "$gt0028|Ability to Handle Finances|=0"
        ]
      },
      "gt0048": {
        "id": "gt0048",
        "priority": 2,
        "when": [
          "($gt0020|Ability to Handle Finances|==1|local::at0054|Manages financial matters independently (budgets, writes checks, pays rent, bills, goes to bank), collects and keeps track of income (1)|)||($gt0020|Ability to Handle Finances|==2|local::at0055|Manages day-to-day purchases, but needs help with banking, major purchases, etc. (1)|)"
        ],
        "then": [
          "$gt0028|Ability to Handle Finances|=1"
        ]
      },
      "gt0043": {
        "id": "gt0043",
        "priority": 1,
        "when": [
          "$gt0010|Ability to use telephone|!=null",
          "$gt0013|Shopping|!=null",
          "$gt0023|Food preparation|!=null",
          "$gt0025|Laundry|!=null",
          "$gt0024|House keeping|!=null",
          "$gt0026|Mode of Transportation|!=null",
          "$gt0027|Responsibility for Own Medications|!=null",
          "$gt0028|Ability to Handle Finances|!=null"
        ],
        "then": [
          "$gt0006|Total score|.magnitude=$gt0010+$gt0013+$gt0023+$gt0025+$gt0024+$gt0026+$gt0027+$gt0028"
        ]
      }
    }
  },
